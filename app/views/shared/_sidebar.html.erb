<div class="flex flex-col items-center w-60 h-full text-gray-700 bg-gray-200 rounded">
  <div class="w-full px-2 ">
    <div class="flex ">
      <span class="ml-4 mt-3">
        <% if current_user.team.avatar.attached? %>
          <%= image_tag current_user.team.avatar, width: '36px'%>
        <% else %>
          <%= image_tag("/default_profile.PNG", width: '36px')%>
        <% end %>
      </span>
      <span class="block ml-4 mt-4 font-bold"><%= current_user.team.name %></span>
    </div>
    <div class="flex flex-col items-center w-full mt-3 border-t border-gray-400">
      <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-yellow-300" href="/dashboard/rooms">
        <img src="https://img.icons8.com/material-sharp/36/000000/video-conference.png"/>
        <span class="ml-4 text-lg font-bold">會議列表</span>
      </a>
      <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-yellow-300" href="/dashboard/questions">
        <img src="https://img.icons8.com/external-nawicon-glyph-nawicon/36/000000/external-question-online-learning-nawicon-glyph-nawicon.png"/>
        <span class="ml-4 text-lg font-bold">面試題庫</span>
      </a>
      <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-yellow-300" href="/dashboard/members">
        <img src="https://img.icons8.com/ios-glyphs/36/000000/user-group-man-woman.png"/>
        <span class="ml-4 text-lg font-bold">組織成員</span>
      </a>
      <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-yellow-300" href="#">
        <img src="https://img.icons8.com/ios-filled/36/000000/upload-document.png"/>
        <span class="ml-4 text-lg font-bold">檔案上傳</span>
      </a>
    </div>
    <div class="flex flex-col items-center w-full mt-2 border-t border-gray-400">
      <a class="flex items-center w-full h-12 px-3 mt-2 rounded hover:bg-yellow-300" href="/dashboard/teams/edit">
        <img src="https://img.icons8.com/external-tanah-basah-glyph-tanah-basah/36/000000/external-setting-essentials-pack-tanah-basah-glyph-tanah-basah.png"/>
        <span class="ml-4 text-lg font-bold">組織設定</span>
      </a>
    </div>
  </div>
</div>
