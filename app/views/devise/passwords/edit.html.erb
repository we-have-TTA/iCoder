<section class="section-session">
  <div class="container">
    <div class="box">
      <h2 class="text-2xl font-bold text-center mb-3">更改您的密碼</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <div class="mb-5">
          <%= f.label :password, "新密碼", class:"form-label" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "長度至少6個字元",class:"form-input" %>
        </div>
        <div class="mb-5">
          <%= f.label :password_confirmation, "確認新密碼", class:"form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "再次輸入新密碼",class:"form-input" %>
        </div>
        <div class="actions mb-8 flex justify-center">
          <%= f.submit "送出變更", class:"btn-summit" %>
        </div>
        <button class="btn-third-party">
          <img alt="google logo" src="https://img.icons8.com/color/24/FFFFFF/google-logo.png" class="mr-1"/>
          <%= link_to "使用goole帳號登入", user_google_oauth2_omniauth_authorize_url, method: :post, class:"w-64"%>
        </button>
        <button class="btn-third-party">
          <img alt="Github logo" src="https://img.icons8.com/ios-glyphs/24/000000/github.png" class="ml-1"/>
          <%= link_to "使用github帳號登入", user_github_omniauth_authorize_url, method: :post, class:"w-64" %>
        </button>
      <% end %>
    </div>
  </div>
</section>
